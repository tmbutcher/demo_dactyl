ZMK_COMBO_ADV(workp,   			&workp,				LT2 LT3 LT4 LT5,		WORK, 		COMBO_TERM_VERY_SLOW)
ZMK_COMBO_ADV(pin,   			&pin,				LT2 LT3 LT4, 			WORK, 		COMBO_TERM_SLOW)
ZMK_COMBO_ADV(short_work_email,	&short_work_email,	RT2 RT3 RT4, 			WORK, 		COMBO_TERM_SLOW)
