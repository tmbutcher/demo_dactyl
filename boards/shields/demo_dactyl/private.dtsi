/* PRIVATE BEHAVIORS */

ZMK_BEHAVIOR(workp, macro,
	wait-ms = <5>;
	tap-ms = <0>;
	bindings
	= <&kp LS(A) &kp R &kp O &kp U &kp N &kp D>
	, <&kp LS(T) &kp H &kp E>
	, <&kp LS(W) &kp O &kp R &kp L &kp D> ;
)

ZMK_BEHAVIOR(pin, macro,
	wait-ms = <5>;
	tap-ms = <0>;
	bindings
	= <&kp N0 &kp N9 &kp N5 &kp N1 &kp N2 &kp N3 &kp RET> ;
)

ZMK_BEHAVIOR(short_work_email, macro,
	wait-ms = <5>;
	tap-ms = <0>;
	bindings
	= <&kp LS(T) &kp O &kp M &kp DOT>
    , <&kp LS(B) &kp U &kp T &kp C &kp H &kp E &kp R &kp AT>
    , <&kp H &kp H &kp S &kp DOT &kp G &kp O &kp V> ; 
)

ZMK_BEHAVIOR(long_work_email, macro,
	wait-ms = <5>;
	tap-ms = <0>;
	bindings
	= <&kp LS(T) &kp H &kp O &kp M &kp A &kp S &kp DOT>
    , <&kp LS(B) &kp U &kp T &kp C &kp H &kp E &kp R &kp AT>
    , <&kp H &kp H &kp S &kp DOT &kp G &kp O &kp V> ;
)

ZMK_BEHAVIOR(my_email, macro,
	wait-ms = <5>;
	tap-ms = <0>;
	bindings
	= <&kp T &kp M &kp B &kp U &kp T &kp C &kp H &kp E &kp R &kp AT>
    , <&kp G &kp M &kp A &kp I &kp L &kp DOT &kp C &kp O &kp M> ;
)



